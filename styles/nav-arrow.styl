@require './config'

.nav-arrow
    display block
    font-weight 200

    &.top
        height 4rem
        width 4rem
        background url(./images/arrow-up.svg) no-repeat center center;

    &.left
        height 3rem
        width 3rem
        background url(./images/arrow-left.svg) no-repeat center center;

    &.right
        height 3rem
        width 3rem
        background url(./images/arrow-right.svg) no-repeat center center;

    &:hover,
    &:active
      opacity 0.8

.dropdown-arrow
    width 1rem
    height 0.5rem
    background url(./images/dropdown-arrow-down.svg) no-repeat center center;
